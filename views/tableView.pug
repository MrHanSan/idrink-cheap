html
  head
    title=DrinkCheap
    style
      include style.css
  body
    div
      section.nav
        if page == undefined
          h2.heading All wares in category
        else
          h2.heading= 'Page: '+page
        - var prev = page-1
        - var next = parseInt(page)+1
        div#low
          a.menu(href='../low/0') Low alkohol (<5%)
          br
          a.menu(href='../low/') All (<5%)
        div#med
          a.menu(href='../medium/0') Medium alkohol (5-10%)
          br
          a.menu(href='../medium/') All (5-10%)
        div#mhigh
          a.menu(href='../med-high/0') medium-high alkohol (10-22%)
          br
          a.menu(href='../med-high/') All (10-22%)
        div#high
          a.menu(href='../high/0') high alkohol (>22%)
          br
          a.menu(href='../high/') All (>22%)
        if page == 0 || page == undefined
          - prev = 0
        else
          a.prev(href="./"+prev) << Prev
        if data.length < 100 || page == undefined
          - next = page
        else
          a.next(href="./"+next) Next >>
    table
      tr(class='table-row')
        td Vare
        td Vare navn
        td â€± Alkohol/krone
        td Volum (l)
        td Alkohol %
        td Pris
        td Pris (l)
        td Type
        td URL
      each val in data
        tr
          each row, index in val
            if index == 'ware_nr'
              td
                a(href=val.url target="_blank"): img(src='https://bilder.vinmonopolet.no/cache/300x300-0/'+row+'-1.jpg' height="30%" alt=row)
            else if index == 'url'
              td 
                a(href=row target="_blank") Link
            else
              td= row

